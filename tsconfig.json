{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["ES2020", "DOM"],
    "target": "ESNext",
    "module": "NodeNext",
    "types": ["vite/client"],
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
